<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("EPAMS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Employee", "Index", "Employees")</li>
                    @if (Session["id"] == null)
                    {
                        <li>@Html.ActionLink("Login", "Login", "Login")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Logout", "Logout", "Login")</li>
                    }
                    <li>@Html.ActionLink("Education", "Index", "Educational_details")</li>
                    <li>@Html.ActionLink("Training", "Index", "Training_details")</li>
                    <li>@Html.ActionLink("Project", "Index", "Turnkey_Project")</li>
                    <li>@Html.ActionLink("Workshop", "Index", "Workshop_details")</li>
                    <li>@Html.ActionLink("Files", "Index", "Confirmations")</li>
                    @if(Session["id"]!=null)
                    {
                        if (Session["Role"].ToString().ToLower().Equals("admin"))
                        {
                            <li>@Html.ActionLink("Verification", "verify", "Confirmations")</li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
